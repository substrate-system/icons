{
  "name": "@substrate-system/icons",
  "description": "Icons as web components",
  "type": "module",
  "version": "0.1.29",
  "main": "dist/index.js",
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test": "npm run test:browser && npm run test-node",
    "test:browser": "esbuild test/index.ts --target=es2020 --bundle --keep-names | tapout",
    "test-node": "esbuild --bundle ./test/node.ts | node | tap-spec",
    "build-css": "postcss src/index.css --use postcss-nesting > dist/style.css",
    "build-css:min": "postcss src/index.css --use cssnano postcss-nesting > dist/style.min.css",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.cjs --sourcemap",
    "build-esm": "esbuild src/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build-ssr": "mkdir -p ./dist/render && esbuild ./src/render/*.ts --format=esm --keep-names --tsconfig=tsconfig.build.json --outdir=./dist/render --sourcemap",
    "build-ssr:cjs": "mkdir -p ./dist/render && esbuild ./src/render/*.ts --format=cjs --keep-names --tsconfig=tsconfig.build.json --out-extension:.js=.cjs --outdir=./dist/render --sourcemap",
    "build-esm:min": "esbuild ./src/*.ts --format=esm --keep-names --bundle --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist --sourcemap",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && vite --base=\"/icons\" build",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build-esm:min && npm run build-css && npm run build-css:min && npm run build-ssr && npm run build-ssr:cjs",
    "start": "vite",
    "toc": "markdown-toc --maxdepth 3 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./render": {
      "import": "./dist/render/index.js",
      "require": "./dist/render/index.cjs"
    },
    "./render/*": {
      "import": "./dist/render/*.js",
      "require": "./dist/render/*.cjs"
    },
    "./css": [
      "./dist/style.css"
    ],
    "./css/min": [
      "./dist/style.min.css"
    ],
    "./css/*": {
      "import": "./dist/*.css"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "dependencies": {
    "@substrate-system/kebab-case": "^0.0.0",
    "@substrate-system/web-component": "^0.0.34"
  },
  "devDependencies": {
    "@substrate-system/debug": "^0.9.2",
    "@substrate-system/dom": "^0.1.7",
    "@substrate-system/tapout": "^0.0.17",
    "@substrate-system/tapzero": "^0.10.15",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "cssnano": "^7.0.3",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "markdown-toc": "^1.2.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-nesting": "^13.0.0",
    "tap-spec": "^5.0.0",
    "typescript": "^5.4.5",
    "vite": "^7.0.3"
  },
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)",
  "license": "SEE LIECENSE IN LICENSE",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/icons.git"
  },
  "keywords": [
    "icons",
    "web",
    "component"
  ],
  "bugs": {
    "url": "https://github.com/substrate-system/icons/issues"
  },
  "homepage": "https://github.com/substrate-system/icons"
}
